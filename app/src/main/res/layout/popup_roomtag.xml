<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="3dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/p_roomT_msg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_bottom_gray"
                android:paddingTop="40dp"
                android:textAlignment="center"
                android:textColor="#353535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_room"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                android:paddingTop="20dp"
                android:textColor="#620303"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pop_roomtag_done"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transparent_redish_ripple_edged"
                    android:paddingTop="20dp"
                    android:text="continue"
                    android:textAlignment="center"
                    android:textColor="#494949"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/p_roomtagprogLY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1380000"
        android:elevation="21dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/p_roontag_progBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>